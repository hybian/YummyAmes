<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iastate.yummyames.activities.FoodPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:src="@drawable/foo_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:layout_marginTop="30sp"
            android:paddingTop="10dp"
            android:paddingLeft="30dp">

            <TextView
                android:id="@+id/food_name_food_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Food Name"
                android:textStyle="bold"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/food_type_food_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Food Type"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/food_price_food_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Food Price"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/res_name_food_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Restaurant Name"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/res_address_food_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Restaurant Address"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/res_phone_food_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant Phone"
                android:textSize="25sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/orderBtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_light"
                android:text="Order Now!"/>

        </LinearLayout>



    </LinearLayout>
</LinearLayout>
